<div class="span8">
	<%= image_tag "gorss.png" %>
</div>
<div class="span2">
	<%= form_for(User.new, :as => User.new , :url => registration_path(User.new), :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
  	<div class="controls">
    	<%= f.submit "Sign Up", :class => 'btn btn-primary' %>
    </div>
  </div>
  
<% end %>
</div>