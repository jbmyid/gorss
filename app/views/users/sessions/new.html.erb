<div class="row" align="center">
	<div class="signup-box">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
				<div class="control-group">
			    <div class="controls">
			      <h2>Sign In</h2>
			    </div>
			  </div>
				<%= devise_error_messages! %>
			  <div class="control-group">
			    <%= f.label :email, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.text_field :email, :class => 'text_area', placeholder: "Enter email address here" %>
			    </div>
			  </div>
			  <div class="control-group">
			    <%= f.label :password, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.password_field :password, :class => 'text_area',placeholder: "Enter password here" %>
			    </div>
			  </div>
			  <div class="control-group">
			  	<% if devise_mapping.rememberable? -%>
				  	<div class="controls">
				  		<label for="user_remember_me"><%= f.check_box :remember_me %>
				  			Remember me</label>
				  		 
				  	</div>
				  <% end -%>
			  	<div class="controls">
			    	<%= f.submit "Sign In", :class => 'btn btn-primary pull-left' %>
			    	<br>
			    	<div class="clear">
			    		<%= render "devise/shared/links" %>
			    	</div>
			    </div>
			  </div>
			  
		<% end %>
		
	</div>
</div>