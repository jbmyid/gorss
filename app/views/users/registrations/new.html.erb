<div class="row" align="center">
	<div class="signup-box">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
				<div class="control-group">
			    <div class="controls">
			      <h2>Sign up</h2>
			    </div>
			  </div>
				
				<%#= debug resource.errors.messages[:email] %>
			  <div class="control-group">
		      <%= f.label :email, :class => 'control-label' %>
		      <div class="controls">
		        <%= f.text_field :email, :class => 'text_area', placeholder: "Enter email address here" %>
		        <span class="error-block"><%= display_errors(resource, :email) %></span>
		      </div>

		    </div>
		    <div class="control-group">
		      <%= f.label :password, :class => 'control-label' %>
		      <div class="controls">
		        <%= f.password_field :password, :class => 'text_area', placeholder: "Enter password here" %>
		        <span class="error-block"><%= display_errors(resource, :password) %></span>
		      </div>
		    </div>
		    <div class="control-group">
		      <%= f.label :password_confirmation, :class => 'control-label' %>
		      <div class="controls">
		        <%= f.password_field :password_confirmation, :class => 'text_area',placeholder: "Please reenter password here" %>
		        <span class="error-block"><%= display_errors(resource, :password_confirmation) %></span>
		      </div>
		    </div>
			  <div class="control-group">
			  	<div class="controls">
			    	<%= f.submit "Sign Up", :class => 'btn btn-primary pull-left' %>
			    	<br></br>
            		<%= render "/users/shared/links"%>
			    </div>
			  </div>
			  
		<% end %>
		
	</div>
</div>